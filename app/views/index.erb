<div class="login">
	<div class="login-screen">
		<img src="https://res.cloudinary.com/streetartsf/image/upload/artworks/8749/MD-Clarion-DSC09595.jpg" alt="W3Schools.com" style="width:100%;height:100%;">
		<div class="app-title">
			<h1>Login</h1>
		</div>
	<form action="/login" method='POST'>
			<div class="login-form">
				<div class="control-group">
					<input type="text" class="login-field" name="email" placeholder="email" id="login-name">
					<label class="login-field-icon fui-user" for="login-name"></label>
				</div>

				<div class="control-group">
					<input type="password" class="login-field" name="password" placeholder="password" id="login-pass">
					<label class="login-field-icon fui-lock" for="login-pass"></label>
				</div>

				<input type="submit" class="btn btn-primary btn-large btn-block" value='Login'></a>
		</div>
	</form><br>
	<form action="/users/new" method="GET">
		<div class="control-group">
			<%= @error %>
			<input type="text" class="code-field" name="code" placeholder="access code" id="registration-field">
			<label class="login-field-icon fui-user" for="enter-code"></label>
		</div>
		<input type="submit" class="btn btn-primary btn-large btn-block" value='Enter registration code?'></a>
	</form>
</div>
</div>
